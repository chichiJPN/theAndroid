<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/android_layout"
    android:paddingBottom="15dp"
    android:orientation="vertical"
    android:background="@drawable/tasks_background">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/profileBar"
        android:background="#5aa877"
        android:layout_marginBottom="10sp"
        android:weightSum="10"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="60sp"
            android:id="@+id/profile_child"
            app:srcCompat="@drawable/profile_child1"
            android:layout_gravity="center"
            android:layout_weight="3" />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_gravity="left"
                android:paddingBottom="5sp"
                android:textSize="16sp"
                android:ems="10"
                android:id="@+id/TextView_name" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="JohnSnow@gmail.com"
                android:layout_gravity="left"
                android:paddingBottom="5sp"
                android:textSize="14sp"
                android:ems="10"
                android:id="@+id/TextView_Address" />

        </LinearLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40sp"
            app:srcCompat="@drawable/edit_blue_64x64"
            android:layout_gravity="center"
            android:layout_weight="2" />

    </LinearLayout>
    <!--
    <ListView
        android:id="@+id/mobile_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>-->

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
    </ListView>

</LinearLayout>