<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="40dp"
            android:orientation="vertical"
            android:background="@drawable/tasks_background" >

            <LinearLayout
                android:id="@+id/LinearLayout4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="15sp"
                android:paddingRight="15sp"
                android:paddingLeft="15sp"
                android:background="#FFFFFF">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_marginBottom="10sp">


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/prof_pic"
                        android:layout_weight="3" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:id="@+id/prof_description"
                        android:layout_gravity="center"
                        android:layout_weight="7" />
                </LinearLayout>

                <!-- Reminder part -->
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Alarms"
                    android:paddingTop="5sp"
                    android:paddingBottom="5sp"
                    android:paddingLeft="15sp"
                    android:background="#66929d"
                    android:textSize="20sp"
                    android:ems="10"
                    android:id="@+id/TextView"
                    android:layout_gravity="center" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
					android:id="@+id/alarm_container"
                    android:background="#FFFFFF">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60sp"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:paddingLeft="10dp"
                        android:paddingTop="10sp"
                        android:paddingBottom="10sp"
                        android:background="@drawable/performance_reminder_border">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="DO HOME CHORES"
                            android:ems="10"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="7" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="10%"
                            android:textSize="20sp"
                            android:ems="10"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:layout_gravity="center" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60sp"
                        android:orientation="horizontal"
                        android:weightSum="13"
                        android:paddingLeft="10dp"
                        android:paddingTop="10sp"
                        android:paddingBottom="10sp"
                        android:background="@drawable/performance_reminder_border">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="DO HOME CHORES"
                            android:ems="10"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="5" />

                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="10%"
                            android:textSize="20sp"
                            android:ems="10"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:layout_gravity="center" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
