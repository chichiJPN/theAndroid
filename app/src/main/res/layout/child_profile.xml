<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="50dp"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/profile_main"
        android:id="@+id/user_image"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:scaleType="fitCenter"
        android:layout_marginBottom="20sp"/>
    <TextView
        android:text="TextView"
        android:textSize="17sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_name"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="20sp" />
    <LinearLayout
        android:id="@+id/parent_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginBottom="10sp"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/profile_child1"
            android:id="@+id/child_profpic1"
            android:layout_weight="2" />
        <TextView
            android:text="Mommy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/child_name1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="4" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/profile_call1"
            android:id="@+id/child_call1"
            android:layout_weight="2" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/profile_message1"
            android:id="@+id/child_message1"
            android:layout_weight="2" />
    </LinearLayout>
</LinearLayout>
